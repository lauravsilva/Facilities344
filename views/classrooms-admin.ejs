<button type="button" class="btn btn-info btn-md" data-toggle="modal" data-target="#addClassroomModal">Add New Classroom</button>

<!-- Modal -->
<div id="addClassroomModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal Content -->
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">x</button>
        <h3 class="modal-title">Add a New Classroom</h3>
      </div>

      <div class="modal-body">
        <form onsubmit="console.log('Building: '+document.getElementById('classroomBuilding').value+' Room Number: '+document.getElementById('classroomRoom').value+' Capacity: '+document.getElementById('classroomCapacity').value)">

          <div class="form-group">
            <label for="classroomBuilding">Classroom Building</label>
            <input required type="text" class="form-control" id="classroomBuilding" placeholder="Enter Classroom Building.">
          </div>

          <div class="form-group">
            <label for="classroomRoom">Classroom Room Number</label>
            <input required type="text" class="form-control" id="classroomRoom" placeholder="Enter Classroom Room Number.">
          </div>

          <div class="form-group">
            <label for="classroomCapacity">Classroom Capacity</label>
            <input required type="number" class="form-control" id="classroomCapacity" placeholder="Enter Classroom Capacity.">
          </div>
          <button type="submit" class="btn btn-info">Add Classroom</button>
        </form>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>

<script>
  function classroom( building, room, capacity, reserved ){
    this.building = building;
    this.room = room;
    this.capacity = capacity;
    this.reserved = reserved;
  }
</script>
