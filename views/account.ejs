        <div class="col-sm-12 col-md-6">
            <div id="authOps" style="display:none">
                <h3>Account Info</h3>
                <div id="profile"> </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6">
            <h2>Reserved Devices</h2>
            <table class="table table-striped">
                <thead class="th active">
                    <th>Device Name</th>
                    <th>Quantity</th>
                    <th>Date Reserved</th>
                    <th>Reserve Condition</th>
                    <th></th>
                </thead>
                <tbody class="tb active">
                    <tr>
                        <td>Laptop</td>
                        <td>1</td>
                        <td>1/1/16</td>
                        <td>New</td>
                        <!-- Return Device Button -->
                        <td>
                            <button type="button" class="open-returndevice btn btn-info btn-sm" data-toggle="modal" data-target="#returnDevice" data-device-name="Laptop">Return</button>
